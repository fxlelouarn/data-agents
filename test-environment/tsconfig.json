{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": false,
    "outDir": "./temp",
    "rootDir": "../",
    "resolveJsonModule": true,
    "isolatedModules": false
  },
  "include": [
    "../apps/agents/src/**/*.ts",
    "../packages/**/*.ts",
    "./agents/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../apps/web/**/*",
    "../apps/dashboard/**/*"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "target": "ES2020"
    }
  }
}