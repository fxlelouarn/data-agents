{
  "name": "data-agents",
  "version": "1.0.0",
  "description": "Sports event data extraction and management agents",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "npm run db:migrate:deploy && npm run db:seed && npm run sync-agents && echo '✅ Setup initial terminé !'",
    "postinstall": "npm run prisma:generate:all || true",
    "install:full": "npm run clean:full && npm install && npm run build && npm run setup && echo '✅ Installation complète terminée !'",
    "reinstall": "npm run clean:full && npm cache clean --force && npm install && echo '✅ Réinstallation complète terminée !'",
    "prisma:generate:all": "npm run prisma:generate:main && npm run prisma:sync && npm run prisma:generate:miles",
    "prisma:generate:main": "cd packages/database && npx prisma generate",
    "prisma:generate:miles": "cd apps/agents && npx prisma generate --schema=prisma/miles-republic.prisma",
    "prisma:sync": "node scripts/sync-prisma-clients.js",
    "prebuild": "npm run clean && npm run prisma:generate:all",
    "build": "turbo build",
    "build:prod": "npm run clean && npm run prisma:generate:all && turbo build",
    "build:types": "turbo build --filter=@data-agents/types",
    "build:database": "npm run prisma:generate:main && turbo build --filter=@data-agents/database",
    "build:framework": "turbo build --filter=@data-agents/agent-framework",
    "build:agents": "npm run prisma:generate:miles && turbo build --filter=@data-agents/sample-agents",
    "dev": "turbo dev",
    "dev:api": "cd apps/api && npm run dev",
    "dev:dashboard": "cd apps/dashboard && npm run dev",
    "dev:agents": "cd apps/agents && npm run dev",
    "lint": "turbo lint",
    "tsc": "turbo tsc",
    "test": "turbo test",
    "test:ffa-url": "npx tsx scripts/test-ffa-url.ts",
    "test:version": "npx tsx scripts/test-version-endpoint.ts",
    "test:proposals": "jest apps/agents/src/__tests__/proposal-application --runInBand",
    "test:proposals:new-event": "jest apps/agents/src/__tests__/proposal-application/new-event.test.ts --runInBand",
    "test:proposals:edition-update": "jest apps/agents/src/__tests__/proposal-application/edition-update.test.ts --runInBand",
    "test:proposals:races": "jest apps/agents/src/__tests__/proposal-application/race-operations.test.ts --runInBand",
    "test:proposals:blocks": "jest apps/agents/src/__tests__/proposal-application/block-application.test.ts --runInBand",
    "test:proposals:user-mods": "jest apps/agents/src/__tests__/proposal-application/user-modifications.test.ts --runInBand",
    "test:proposals:watch": "jest apps/agents/src/__tests__/proposal-application --watch --runInBand",
    "test:proposals:coverage": "jest apps/agents/src/__tests__/proposal-application --coverage --runInBand",
    "test:setup-db": "./scripts/setup-test-databases.sh",
    "test:fix-auto": "node scripts/fix-tests-auto.js",
    "show-versions": "npx tsx scripts/show-agent-versions.ts",
    "sync-agents": "npx tsx scripts/sync-agents.ts",
    "reset-agents": "npx tsx scripts/reset-agents.ts",
    "reset-proposals": "npx tsx scripts/reset-proposals.ts",
    "fix-null-applied-changes": "npx tsx scripts/fix-null-applied-changes.ts",
    "clean": "find packages apps -maxdepth 2 -type d -name dist -not -path '*/node_modules/*' -exec rm -rf {} + 2>/dev/null || true",
    "clean:turbo": "turbo clean",
    "clean:full": "rm -rf node_modules apps/*/node_modules packages/*/node_modules node_modules/.prisma apps/node_modules/.prisma pnpm-lock.yaml package-lock.json && npm run clean",
    "verify": "npm run tsc && npm run lint && echo '✅ Vérification réussie !'",
    "db:generate": "npm run prisma:generate:main",
    "db:migrate": "cd packages/database && npx prisma migrate dev",
    "db:migrate:deploy": "cd packages/database && npx prisma migrate deploy",
    "db:push": "cd packages/database && npx prisma db push",
    "db:studio": "cd packages/database && npx prisma studio",
    "db:seed": "cd packages/database && npx tsx prisma/seed.ts",
    "format": "turbo format"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@9.0.0",
  "dependencies": {
    "axios": "^1.13.1",
    "cheerio": "^1.1.2",
    "fuse.js": "^7.1.0",
    "turbo": "^1.10.16"
  }
}
